{
  "name": "tuto-blockchain",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "start-test-env": "nodemon test-env/app.js",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/app.js",
    "build-ts": "tsc",
    "prettier": "prettier \"src/**/*.{ts,html}\"",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "tslint -c tslint.json -p tsconfig.json --fix src/**/*.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\""
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "crypto-js": "^3.1.9-1",
    "debug": "~2.6.9",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "~4.16.0",
    "hex-to-binary": "^1.0.1",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "rxjs": "^6.2.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.48",
    "@types/body-parser": "^1.16.8",
    "@types/crypto-js": "^3.1.43",
    "@types/dotenv": "^2.0.23",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^7.0.58",
    "@types/request": "0.0.45",
    "@types/ws": "^6.0.0",
    "concurrently": "^3.5.1",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.3",
    "prettier": "1.14.2",
    "shelljs": "^0.7.8",
    "tslint": "^5.9.1",
    "typescript": "^3.0.1"
  }
}
